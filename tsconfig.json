{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true, // 启用装饰器
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["packages/*"]
    },
    "lib": ["dom", "es6"],
    "noImplicitAny": false
  },
  "include": [
    "examples/**/*.ts",
    "examples/**/*.vue",
    "src/**/*.ts",
    "src/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
